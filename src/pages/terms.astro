---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import SidebarContent from '../components/blocks/basic/StickySidebar.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'

// Content
import SEOData from '../data/json-files/seoData.json'
import TermsContent from '../data/json-files/termsContent.json'

// Get SEO data
const { global, pages } = SEOData
const pageSEO = {
    title: `${global.siteName}${global.separator}${pages.terms.title}`,
    description: pages.terms.description,
    image: pages.terms.image || global.defaultImage,
    type: global.defaultType,
    keywords: pages.terms.keywords
}
---

<Layout {...pageSEO}>
    <Hero 
        title={SEOData.terms.headertitle} 
        text={SEOData.terms.headertext} 
    />
    
    {TermsContent.sections.map((section, index) => (
        <SidebarContent classes={index % 2 === 1 ? "bg-neutral-50 dark:bg-neutral-900" : ""}>
            <div slot="sidebar">
                <h3>{section.sidebar.title}</h3>
                <p>{section.sidebar.text}</p>
            </div>
            <div class="basic-text">
                {section.content.map(item => (
                    <>
                        <h4>{item.title}</h4>
                        {item.text.map(paragraph => (
                            <p>{paragraph}</p>
                        ))}
                    </>
                ))}
            </div>
        </SidebarContent>
    ))}
</Layout>
