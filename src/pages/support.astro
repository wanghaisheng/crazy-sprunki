---
import Layout from '../layouts/Layout.astro';
import DonationTable from '../components/blocks/donations/DonationTable.astro';
import SEOData from '../data/json-files/seoData.json'
import donationChannels from '../data/json-files/donationChannel.json'
import donationRecords from '../data/json-files/donationRecord.json'
import { formatNumber, formatDate, getImage } from '../utils/helpers'

---

<Layout title={SEOData.support.title} description={SEOData.support.description}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">{SEOData.support.h1}</h1>

      <!-- Donation Methods Section -->
      <div class="rounded-lg p-6 mb-8">
        <h2 class="text-xl font-semibold mb-4">{SEOData.support.channel}</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {donationChannels.map((channel) => (
            <div class="p-4 rounded-lg">
              <h3 class="text-lg font-medium mb-3">{channel.name}</h3>
              <div class="aspect-square max-w-[200px] mx-auto">
                <img 
                  src={getImage(channel.qrCode).src} 
                  alt={`${channel.name}`}
                  class="w-full h-full object-contain"
                />
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Donation List -->
      <div class="rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">{SEOData.support.record}</h2>
        <DonationTable data={donationRecords} />
      </div>
    </div>
  </main>
</Layout>
