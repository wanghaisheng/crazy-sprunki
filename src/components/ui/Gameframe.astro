---
// Gameframe
// ------------
// Description: A responsive iframe component for embedding games or other content
// Properties:
// - link: the source URL for the iframe
// - width: optional width (default: 100%)
// - height: optional height (default: 600px)
// - classes: additional classes
type Props = {
  link?: string
  width?: string | number
  height?: string | number
  classes?: string
}
const {
  link,
  width = '100%',
  height = '600',
  classes
} = Astro.props
---
<div
  class:list={[
    'gameframe',
    { [`${classes}`]: classes }
  ]}
>
  <div class="gameframe__container">
    <iframe
      src={link}
      width={width}
      height={height}
      style="border: none; overflow: hidden;"
      class="no-scroll"
      loading="lazy"
      allowfullscreen
    ></iframe>
  </div>
</div>

<style>
  .gameframe {
    @apply w-full;
  }
  .gameframe__container {
    @apply relative w-full;
    /* 16:9 Aspect Ratio Container */
    padding-top: 56.25%;
  }
  .gameframe__container iframe {
    @apply absolute top-0 left-0 w-full h-full;
    border: 0;
  }
  .no-scroll {
    overflow: hidden;
  }
</style>