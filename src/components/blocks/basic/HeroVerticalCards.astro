---
import type { Card } from '../../../types/basic';

interface Props {
  cards: Card[];
}
const { cards } = Astro.props;
---

<div data-hydration-on-demand="true" class="section-content">
  <div class="atom-component" role="button" tabindex="0" style="outline: none;">
    <div class="atom-design-v1 style__hero-vertical-component___2JEHR" style="background-color: var(--bg-0); background-position: center center; background-size: cover; background-repeat: no-repeat; background-attachment: scroll;">
      <span style="display: none;"></span>
      <div class="style__hero-vertical-wrapper___2mUEj" style="min-height: 800px; padding-top: 128px; padding-bottom: 128px; width: 1200px;">
        <div data-aos="fade-up" data-aos-once="true" class="style__vertical-card-list___LceQJ style__vertical-center-align___39Pu3 aos-init aos-animate">
          {cards.map((card, index) => (
            <div class="style__vertical-card-col___3agtC" style={index % 2 === 0 ? 'margin-left: 0px;' : 'margin-left: 16px;'}>
              <div class="atom-design-v1 style__hero-vertical-card___2B64y" style="background-color: transparent;">
                <span style="display: none;"></span>
                <div style="display: contents; cursor: initial;">
                  <div role="button" tabindex="0" class="style__card-wrapper___3yqfZ style__vertical-center-align___3RP93" style="padding-top: 0px; padding-bottom: 0px; outline: none;">
                    <div class="style__card-container___KPQkl style__size-xl___30LZE">
                      <div class="style__text-content-container___1aLKY" style={index % 2 === 0 ? 'padding-top: 192px; padding-right: 256px;' : 'padding-top: 8px; padding-bottom: 200px; padding-left: 256px;'}>
                        <h3 data-aos="fade-up" data-aos-once="true" class="style__headline___1ripS style__headline-text___1tW5r aos-init aos-animate" style="background-image: var(--highlight-text-on-dark); background-clip: text; color: transparent; padding-bottom: 0.1em; margin-bottom: -0.1em; max-width: 693px;">
                          {card.heading}
                        </h3>
                        <div data-aos="fade-up" data-aos-once="true" class="style__divider-container___2u5xw aos-init aos-animate" style="height: 48px;">
                          <div class="style__divider___G4nDm" style="height: 1px; border-radius: 0px; width: 432px; background-color: var(--border);"></div>
                        </div>
                        <p data-aos="fade-up" data-aos-once="true" class="text-ms-20 style__description___2V1Q7 aos-init aos-animate" style="font-weight: 600; font-size: 20px; line-height: 28px; color: var(--secondary); margin-top: 0px; max-width: 693px;">
                          {card.description}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>
