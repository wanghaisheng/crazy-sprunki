---
import type { IconTextCard } from '../../../types/basic';
import Section from '../../ui/Section.astro';
import Row from '../../ui/Row.astro';
import Col from '../../ui/Col.astro';
import Card from '../../ui/cards/BasicCard.astro';

interface Props {
  sectionId?: string;
  header: {
    title: string;
    subtitle: string;
  };
  defaultImage?: string;
  data: {
    cards: IconTextCard[];
  };
}

const {
  sectionId = 'icon-image-grid-cards',
  header,
  defaultImage = '/assets/default-image.svg',
  data = [],
} = Astro.props;
---

<Section id="text-icons-cards">
  <Row>
    <Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
      <h2 class="text-balance" set:html={header.title} />
      <p class="pb-0 text-lg">
        {header.subtitle}
      </p>
    </Col>
  </Row>
  <Row>
    {data.cards.map((card: IconTextCard) => (
      <Col span="3">
        <Card
          title={card.title}
          subtitle={card.subtitle}
          icon={card.icon}
          classes="text-center dark:!bg-neutral-800/50"
          link={card.link}
        />
      </Col>
    ))}
  </Row>
</Section>
